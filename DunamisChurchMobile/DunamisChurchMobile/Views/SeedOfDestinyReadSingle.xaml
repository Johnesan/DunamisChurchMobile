<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DunamisChurchMobile.Views.SeedOfDestinyReadSingle"
             Title="Read SOD">
    <ScrollView>  
            <StackLayout>
                <Label Text="{Binding title}" Font="20" TextColor="Black" HorizontalTextAlignment="Center"/>
            <Label Text="{Binding created, StringFormat='{0:dddd, MMMM dd, yyyy}'}" FontSize="15" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Blue"/>
            <WebView x:Name="webview" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="3,0,3,0"/>
            </StackLayout>        
    </ScrollView>
</ContentPage>